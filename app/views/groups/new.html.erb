<div class="container my-5">
<%= form_for (@group) do |f| %>
    <div class="form-group">
        <%= f.label :name, "Name" %>
        <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :image, "Upload book image" %>
        <%= f.file_field :image %>
    </div>

    <%= f.submit "Add Group", class: "btn btn-success" %>
<% end %>
</div>